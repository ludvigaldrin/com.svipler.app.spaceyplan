{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.svipler.athom.spacehomey",
  "version": "0.0.4",
  "compatibility": ">=12.1.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Space Homey"
  },
  "description": {
    "en": "Interactive Flor Plan Widget"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "brandColor": "#0000cc",
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Ludvig Aldrin",
    "email": "ludvig.aldrin@gmail.com"
  },
  "api": {
    "log": {
      "method": "post",
      "path": "/log",
      "public": false
    },
    "getDevices": {
      "method": "get",
      "path": "/devices",
      "public": false
    }
  },
  "widgets": {
    "space-homey": {
      "name": {
        "en": "Space Homey"
      },
      "settings": [
        {
          "id": "widgetHeight",
          "type": "number",
          "label": {
            "en": "Widget Height"
          },
          "value": 400,
          "min": 200,
          "max": 800,
          "step": 50,
          "hint": {
            "en": "Height of the widget in pixels (200-800)"
          }
        }
      ],
      "api": {
        "getFloors": {
          "method": "GET",
          "path": "/floors"
        },
        "getDevices": {
          "method": "GET",
          "path": "/devices"
        },
        "getFloorDevices": {
          "method": "GET",
          "path": "/floors/:floorId/devices"
        },
        "getSelectedFloors": {
          "method": "GET",
          "path": "/selectedFloors"
        },
        "saveSelectedFloor": {
          "method": "POST",
          "path": "/selectedFloors"
        },
        "log": {
          "method": "POST",
          "path": "/log"
        },
        "getDeviceState": {
          "method": "GET",
          "path": "/devices/:deviceId/capabilities/:capabilityId"
        },
        "setDeviceState": {
          "method": "PUT",
          "path": "/devices/:deviceId/capabilities/:capabilityId"
        },
        "subscribeToDevices": {
          "method": "POST",
          "path": "/subscribeToDevices"
        },
        "unsubscribeWidget": {
          "method": "POST",
          "path": "/unsubscribeWidget"
        }
      },
      "id": "space-homey"
    }
  }
}